@Article{doi:10.1146/annurev-physchem-042018-052340,
  author   = {Bernetti, Mattia and Masetti, Matteo and Rocchia, Walter and Cavalli, Andrea},
  title    = {Kinetics of Drug Binding and Residence Time},
