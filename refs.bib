@Article{Pfaendtner2015_pbmetad,
  author   = {Pfaendtner, Jim and Bonomi, Massimiliano},
  title    = {{Efficient Sampling of High-Dimensional Free-Energy Landscapes with Parallel Bias Metadynamics}},
